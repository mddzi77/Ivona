<NewProfileGridLayout>:
    cols: 1

    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        padding: 10

        Label:
            text: 'New Profile'
            font_size: 35

        TextInput:
            id: new_profile_text_input
            multiline: False

        TextInput:
            id: sound_drop
            multiline: False

        Button:
            id: add_button
            text: 'Add'
            size_hint_y: None
            height: 50
            on_press: print('New profile added')

        Button:
            id: cancel_button
            text: 'Cancel'
            size_hint_y: None
            height: 50
			on_release:
				app.root.transition.direction = 'right'
				app.root.current = '-main_screen-'